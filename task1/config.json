{
    "name": "FinCausal",
    "n_gpu": 1,

    "arch": {
        "type": "FinCausalBert",
        "args": {}
    },
    "data_loader": {
        "type": "FinCausalDataloader",
        "args":{
            "datapath": "data/train.csv",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 2e-5,
            "eps": 1e-8 ,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
